<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="report_invoice_document"
                  inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='row'][1]/div[@class='col-xs-5 col-xs-offset-7'][1]"
                   position="attributes">
                <attribute name="class">col-xs-5</attribute>
            </xpath>
            <xpath expr="//h2" position="before">
                <div class="mfgt-company-city-date-line col-xs-5 col-xs-offset-7">
                    <span t-field="o.company_id.city"/>,
                    <span t-field="o.date_invoice"/>
                </div>
            </xpath>
            <xpath expr="//div[@class='row mt32 mb32']/div[@t-if='o.date_invoice']"
                   position="attributes">
                <attribute name="style">white-space: nowrap;</attribute>
            </xpath>
        </template>

    </data>
</odoo>
