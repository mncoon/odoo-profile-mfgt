<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_purchaseorder_document"
                  inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//span[@t-field='line.date_planned']"
                   position="replace">
                <span t-field="line.date_planned"
                      t-field-options='{"date_only": true}'/>
            </xpath>
            <xpath expr="//p[@t-field='o.date_order']" position="attributes">
                <attribute name="t-field-options">{"date_only": true}</attribute>
            </xpath>            
            <xpath expr="//h2" position="before">
                <div class="mfgt-company-city-date-line text-right">
                    <span t-field="o.company_id.city"/>,
                    <span t-field="o.date_order"
                          t-field-options='{"date_only": true}'/>
                </div>
            </xpath>
        </template>
        
    </data>
</odoo>
